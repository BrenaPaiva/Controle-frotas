<mvc:View
	controllerName="template.ui5.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<!--Cabeçalho -->
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<actions>
					<m:Button
						text="{i18n>editar}"
						id="edit"
						type="Transparent"
						enable="false"
						press=".handleEditPress" />
						<m:Button
						text="Salvar"
						id="save"
						type="Transparent"
						visible="false"
						press=".handleSavePress" />
						<m:Button
						text="Cancelar"
						id="cancel"
						type="Transparent"
						visible="false"
						press=".handleCancelPress" />
					<m:Button
						icon="sap-icon://decline"
						type="Transparent"
						press=".handleClose"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
					<m:Button
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Rendimensionar"
						visible="{= ${/actionButtonsInfo/endColumn/fullScreen} !== null }" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection
				id="object"
				title="Informações do veículo">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Placa"/>
									<m:Text text="{Nr_Placa}"  id="modelo" />
									<m:Label text="Chassi" />
									<m:Text text="{Nr_Chassi}" id="placa"/>
									<m:Label text="Renavam" />
									<m:Text text="{Nr_Renavam}" />
									<m:Label text="Modelo" />
									<m:Text text="{St_Modelo}" />
									<m:Label text="Locadora"/>
									<m:Text text="{Ds_Locadora}" />
									<m:Label text="Centro de custo"/>
									<m:Text text="{Nr_CentroCusto}" />
									<m:Label text="Status do veículo"/>
									<m:Text text="{Ds_DescStatusVeic}"/>
									<m:Label text="Status CRLV"/>
									<m:Text text="{Ds_DescStatusCrlv}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection
				title="Histórico de Condutores"
				items="{HistoricoSet}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List 
								items="{HistoricoSet}"
								class="sapUiResponsiveMargin"
								width="auto"
								>
								<m:ObjectListItem
									title="{Name}"
									number="{ValMulta}"
									type="Navigation"
									press=".onPress">
									<m:firstStatus>
										<m:ObjectStatus
											text="{Description}"
											state="Success" />
									</m:firstStatus>
									<m:ObjectAttribute title="CPF" />
									<m:ObjectAttribute text="{CpfNumber}" />
									<m:ObjectAttribute title="Placa" />
									<m:ObjectAttribute text="{Placa}" />
									<m:ObjectAttribute title="Data Início" id="dataInicio" />
									<m:ObjectAttribute text="{LocacaoDe}" />
									<m:ObjectAttribute title="Data fim" />
									<m:ObjectAttribute text="{LocacaoAte}" id="dataFim" />
									<m:ObjectAttribute title="Status Crlv" />
									<m:ObjectAttribute text="{Ds_DescStatusCrlv}"/>
									<m:ObjectAttribute title="Status do veículo" />
									<m:ObjectAttribute text="{Ds_DescStatusVeic}" />
								</m:ObjectListItem>
							</m:List>
							
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<!-- <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Salvar" text="Save" />
				<m:Button type="Cancelar" text="Cancel" />
			</m:OverflowToolbar>
		</footer> -->
	</ObjectPageLayout>
</mvc:View>