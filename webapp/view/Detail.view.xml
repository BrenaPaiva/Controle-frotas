<mvc:View
	controllerName="template.ui5.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<!--Cabeçalho -->
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<actions>
					<m:Button
						text="Editar"
						type="Transparent" />
					<m:Button
						icon="sap-icon://decline"
						type="Transparent"
						press=".handleClose"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
					<m:Button
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Rendimensionar"
						visible="{= ${/actionButtonsInfo/endColumn/fullScreen} !== null }" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection
				id="object"
				title="Informações do veículo">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Modelo" />
									<m:Text text="{St_Modelo}" />
									<m:Label text="Placa" />
									<m:Text text="{Nr_Placa}" />
									<m:Label text="Locadora" />
									<m:Text text="{Ds_Locadora}" />
									<m:Label text="ID Locadora" />
									<m:Text text="{St_IdLoc}" />
									<!-- <m:Label text="Nome"/>
										<m:Text  text="{HistoricoSet}"/>  -->
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection
				title="Condutores"
				items="{HistoricoSet}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{HistoricoSet}">
								<m:ObjectListItem
									title="{Name}"
									number="{ValMulta}">
									<m:firstStatus>
										<m:ObjectStatus
											text="{Description}"
											state="Success" />
									</m:firstStatus>
									<m:ObjectAttribute title="CPF" />
									<m:ObjectAttribute text="{CpfNumber}" />
									<m:ObjectAttribute title="Placa" />
									<m:ObjectAttribute text="{Placa}" />
									<m:ObjectAttribute title="Data Início" />
									<m:ObjectAttribute text="{LocacaoDe}" />
									<m:ObjectAttribute title="Data fim" />
									<m:ObjectAttribute text="{LocacaoAte}" />
								</m:ObjectListItem>
							</m:List>
							
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Save" />
				<m:Button type="Reject" text="Cancel" />
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>