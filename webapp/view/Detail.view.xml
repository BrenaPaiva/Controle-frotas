<mvc:View
	controllerName="template.ui5.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<!--Cabeçalho -->
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<actions>
					<m:Button
						id="edit"
						text="Editar"
						type="Transparent" 
						press=".handleEditPress"
						enabled="false"/>
					<m:Button 
						id="save"
					 	text="Salvar"
						type="Emphasized"
						visible="false"
						press="handleSavePress" />
					<m:Button 
						id="cancel"
						text="Cancel"
						visible="false"
						press="handleCancelPress" />
					<m:Button
						icon="sap-icon://decline"
						type="Transparent"
						press=".handleClose"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
					<m:Button
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Rendimensionar"
						visible="{= ${/actionButtonsInfo/endColumn/fullScreen} !== null }" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection
				id="object"
				title="Informações do veículo">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Nome da compania" />
									<m:Text text="{CompanyName}" />
									<m:Label text="CEP" />
									<m:Text text="{PostalCode}" />
									<m:Label text="Nome para contato" />
									<m:Text text="{ContactName}" />
									<m:Label text="Cidade" />
									<m:Text text="{City}" />
									<!-- <m:Label text="Nome"/>
										<m:Text  text="{HistoricoSet}"/>  -->
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection
				title="Condutores"
				items="{Orders}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{Orders}">
								<m:ObjectListItem
									title="{CustomerID}"
									number="{OrderID}">
									<m:firstStatus>
										<m:ObjectStatus
											text="{ShipCountry}"
											state="Success" />
									</m:firstStatus>
									<m:ObjectAttribute title="Origem" />
									<m:ObjectAttribute text="{ShipName}" />
									<m:ObjectAttribute title="Endereço" />
									<m:ObjectAttribute text="{ShipAddress}" />
									<m:ObjectAttribute title="Cidade" />
									<m:ObjectAttribute text="{ShipCity}" />
									<m:ObjectAttribute title="Data fim" />
									<m:ObjectAttribute text="{OrderDate}" />
								</m:ObjectListItem>
							</m:List>
							
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Save" />
				<m:Button type="Reject" text="Cancel" />
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>