<mvc:View
	controllerName="template.ui5.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Controle de frotas"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</OverflowToolbar>
				<Table
					id="productsTable"
					inset="false"
					items="{ path: '/VeiculoSet'}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns width="2rem" height="17rem">
						<Column hAlign="End">
							<Text text="Status"/>
						</Column>
						<Column hAlign="End">
							<Text text="Locadora/Placa"/>
						</Column>
						<Column hAlign="End">
							<Text text="Modelo"/>
						</Column>
						<Column hAlign="End">
							<Text text="Modelo"/>
						</Column>	
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<core:Icon
									src="{= ${HistoricoSet/Placa} ? 'sap-icon://business-card' : 'sap-icon://car-rental'}"
									class="size4"
									color="#1C4C98"
									id="icon"
									width="4em">
									<core:layoutData>
										<FlexItemData growFactor="2" />
									</core:layoutData>
								</core:Icon>
								<ObjectIdentifier title="{Ds_Locadora}" text="{Nr_Placa}"/>
								<ObjectIdentifier text="{St_Modelo}"/>
								<ObjectIdentifier title="{Ds_DescStatusVeic}"/>								
							</cells>
						</ColumnListItem>
						
					</items>
				</Table>
			</VBox>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>